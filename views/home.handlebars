<div class="container-fluid">
    <div class="row">
        <header class="bg-success text-white p-3" style="height: 25vh;">
            <h1><b>Bienvenido c/websocket</b></h1>
        </header>
    </div>


    <div class="row">
        <div class="col-12 m-3">




            <ul>
                {{#each products}}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src={{this.thumbnail}} alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">(${{this.price}}). ({{this.stock}}U)</p> 
                        <a href="#" class="btn btn-primary">Ver Producto</a>
                    </div>
                </div>
                {{/each}}
            </ul>
        </div>
    </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js"></script>
<script>
    const ws = io('ws://localhost:8080');

    ws.on('connect', () => { 
        ws.emit('event_product', 'Este es un mensaje de producto');
        ws.on('server_confirm', (msg) => {
            console.log('El servidor ha confirmado la conexi√≥n');
        });
    })
</script>
